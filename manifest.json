{
    "name": "Reduce Background Flicker",
    "short_name": "Reduce Flicker",
    "description": "Prevent that annoying white flash between pages",
    "author": "rileyjshaw",
    "permissions" : ["http://*/*", "https://*/*"],
    "version": "1.0.0",
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["main.js"],
        "all_frames": false,
        "run_at": "document_start"
    }],
    "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },
    "manifest_version": 2
}
